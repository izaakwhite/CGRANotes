digraph Color {
    rankdir=LR;

    node [shape=doublecircle, label="Red", style=filled, fillcolor="#799EF2"] Red;
    node [shape=circle, label="Blue", style=filled, fillcolor="#799EF2"] Blue;

    Blue    ->  Red [ label = "in == 2'h1" ];
    Red    ->  Red [ label = "in == 2'h0" ];
    Red    ->  Blue [ label = "in == 2'h1" ];
}
